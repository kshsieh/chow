<!DOCTYPE html>
<html>
  <head>
    <title>Chow</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-chow">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Chow", root_path, class: 'navbar-brand' %>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Dogs", dogs_path %></li>
          </ul>
          <ul class="nav navbar-right navbar-nav">
            <% if current_user %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %><span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "My Profile", "javascript:void(0);" %></li>
                  <li>
                    <%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
                  </li>                  
                </ul>
              </li>
            <% else %>
              <li><%= link_to 'Log In', new_user_session_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <% if notice %>
      <div class="container-fluid notifications alert-info">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p><%= notice %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% if alert %>
      <div class="container-fluid notifications alert-danger">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p><%= alert %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="container main">
      <%= yield %>
    </div>
  </body>
</html>
